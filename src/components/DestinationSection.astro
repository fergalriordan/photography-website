---
interface ImageItem {
  src: string;
  alt: string;
}

interface Props {
  title: string;
  description: string;
  images: ImageItem[];
  galleryUrl: string;
}

const { title, description, images, galleryUrl } = Astro.props as Props;
---

<section class="w-full py-12 bg-background px-4">
  <!-- Banner -->
  <div class="text-center mb-4">
    <h2 class="text-3xl md:text-4xl font-bold text-text">{title}</h2>
    <p class="text-slate mt-2">{description}</p>
  </div>

  <!-- Horizontal Scrollable Row -->
  <div class="overflow-x-auto scrollbar-hide snap-x snap-mandatory">
    <div class="grid auto-cols-max grid-flow-col gap-2 px-2">
      {
        images.map(({ src, alt }) => (
          <img src={`/${src}`} alt={alt} class="w-80 object-cover snap-start" />
        ))
      }
      <a
        href={galleryUrl}
        class="flex items-center justify-center w-48 md:w-56 lg:w-64 bg-accent text-white font-semibold hover:bg-accent-dark transition snap-start"
      >
        Go to Gallery â†’
      </a>
    </div>
  </div>
</section>
