---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    

    <div class="nav-left">
      <h1>
        <a href="/">{SITE_TITLE}</a>
      </h1>
      <div class="social-links">
        <a href="https://instagram.com/fergalriordan/" target="_blank">
          <span class="sr-only">Follow me on Instagram</span>
          <svg class="instagram-icon" viewBox="0 0 24 24" aria-hidden="true">
            <path
              fill="currentColor"
              d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2m0-2A7.75 7.75 0 0 0 0 7.75v8.5A7.75 7.75 0 0 0 7.75 24h8.5A7.75 7.75 0 0 0 24 16.25v-8.5A7.75 7.75 0 0 0 16.25 0h-8.5zM12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10zm0-2a7 7 0 1 0 0 14 7 7 0 0 0 0-14zm6.5.25a1.25 1.25 0 1 1-2.5 0 1.25 1.25 0 0 1 2.5 0z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
	
	<button class="nav-toggle" aria-expanded="false">â˜°</button>

    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Destinations</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 1.5em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h1 {
    margin: 0;
    font-size: 1em;
  }
  h1 a {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2em;
    flex-wrap: wrap;
  }
  .nav-left {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5em;
  }
  .nav-left h1 {
    text-align: center;
  }
  .nav-toggle {
    display: none;
    font-size: 1.5rem;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5em;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    border-bottom-color: var(--accent);
  }
  .social-links {
    display: flex;
    gap: 1em;
  }
  .social-links a {
    text-decoration: none;
    color: rgb(var(--gray));
    display: flex;
  }
  .social-links a:hover {
    color: rgb(var(--gray-dark));
  }
  .instagram-icon {
    width: 32px;
    height: 32px;
  }
  .internal-links {
    display: flex;
    gap: 1em;
    align-items: center;
  }
  @media (max-width: 1080px) {
    nav {
      flex-direction: row;
      align-items: flex-start;
      flex-wrap: wrap;
    }

    .nav-toggle {
      display: block;
    }

    .nav-left {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5em;
    }

    .internal-links {
      flex-direction: column;
      display: none;
      gap: 0.5em;
      margin-top: 1em;
      width: 100%;
    }

    .internal-links.show {
      display: flex;
    }

    .instagram-icon {
      width: 24px;
      height: 24px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toggle = document.querySelector(".nav-toggle");
    const links = document.querySelector(".internal-links");

    if (toggle && links) {
      toggle.addEventListener("click", () => {
        const expanded = toggle.getAttribute("aria-expanded") === "true";
        toggle.setAttribute("aria-expanded", String(!expanded));
        links.classList.toggle("show");
      });
    }
  });
</script>
