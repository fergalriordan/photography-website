---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_TAGLINE } from "../consts";
---

<header>
  <nav>
    <div class="nav-left">
      <h1 class="site-title">
        <a href="/">
          <span class="main-title">{SITE_TITLE}</span>
          <span class="sub-title">{SITE_TAGLINE}</span>
        </a>
      </h1>
    </div>

    <button class="nav-toggle" aria-expanded="false">â˜°</button>

    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Destinations</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 1em 2em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h1 {
    margin: 0;
    font-size: 1em;
  }
  h1 a {
    text-decoration: none;
  }
  .site-title {
    text-align: center;
    line-height: 1.2;
  }

  .site-title .main-title {
    font-size: 1.5rem;
    font-weight: 700;
    display: block;
  }

  .site-title .sub-title {
    font-size: 1rem;
    font-weight: 400;
    color: rgb(var(--gray));
    display: block;
    margin-top: 0.25rem;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2em;
    flex-wrap: wrap;
  }
  .nav-left {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
  }
  .nav-left h1 {
    text-align: center;
  }
  .nav-toggle {
    display: none;
    font-size: 1.5rem;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5em;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    border-bottom-color: var(--accent);
  }
  .internal-links {
    display: flex;
    gap: 1em;
    align-items: center;
  }
  @media (max-width: 1080px) {
    header {
      padding: 0.1em;
    }

    nav {
      position: relative; /* allow positioning inside nav */
      flex-direction: column;
      align-items: center;
    }

    .nav-toggle {
      display: block;
      position: absolute;
      top: 1.5em;
      right: 1.5em;
    }

    .nav-left {
      align-items: center;
      text-align: center;
      margin-top: 1em;
    }

    .internal-links {
      flex-direction: column;
      display: none;
      gap: 0.5em;
      margin-top: 1em;
      width: 100%;
      align-items: center;
    }

    .internal-links.show {
      display: flex;
    }

  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toggle = document.querySelector(".nav-toggle");
    const links = document.querySelector(".internal-links");

    if (toggle && links) {
      toggle.addEventListener("click", () => {
        const expanded = toggle.getAttribute("aria-expanded") === "true";
        toggle.setAttribute("aria-expanded", String(!expanded));
        links.classList.toggle("show");
      });
    }
  });
</script>
