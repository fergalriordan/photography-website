---
import HeaderLink from "./HeaderLink.astro";
import Logo from "../assets/logos/initials_logo_black.png";
---

<header class="fixed top-0 left-0 w-full bg-background border-b border-gray-300 py-2 z-50">
  <nav class="flex items-center justify-between flex-wrap w-full min-h-0 py-2">
    <h1 class="leading-none m-0 px-10 text-left md:text-left flex-none">
      <a href="/" class="no-underline text-text block px-5 m-0">
        <img
          src={Logo.src}
          alt="Fergal Riordan Photography Logo"
          class="h-8 w-auto block"
        />
      </a>
    </h1>

    <button
      class="md:hidden px-4 text-2xl text-text focus:outline-none"
      aria-label="Toggle navigation menu"
      id="burger-menu-btn"
      type="button"
    >
      &#9776;
    </button>

    <div
      id="header-links"
      class="flex-col md:flex-row flex gap-10 items-center px-10 w-full md:w-auto hidden md:flex mt-6 md:mt-0"
    >
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/destinations">Destinations</HeaderLink>
      <!--- <HeaderLink href="/blog">Blog</HeaderLink> -->
      <HeaderLink href="/about">About</HeaderLink>
    </div>
  </nav>

  <script is:inline>
    document.addEventListener("DOMContentLoaded", function () {
      const btn = document.getElementById("burger-menu-btn");
      const links = document.getElementById("header-links");
      if (btn && links) {
        btn.addEventListener("click", () => {
          links.classList.toggle("hidden");
        });
      }
    });
  </script>
</header>
