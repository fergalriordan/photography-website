---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_TAGLINE, SITE_DESCRIPTION } from "../data/site";
import {
  WIDESCREEN_HOMEPAGE_CAROUSEL_PHOTOS,
  NARROW_SCREEN_HOMEPAGE_CAROUSEL_PHOTOS,
  HOMEPAGE_COLLAGE_HERO_PHOTOS,
  ADDITIONAL_HOMEPAGE_COLLAGE_PHOTOS,
} from "../data/homepage";

import PhotoCarousel from "../components/PhotoCarousel.astro";
import PhotoCollage from "../components/PhotoCollage.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`${SITE_TITLE} | ${SITE_TAGLINE}`}
      description={SITE_DESCRIPTION}
    />
    <style>
      html {
        scroll-snap-type: y proximity;
      }
      .snap-start {
        scroll-snap-align: start;
        scroll-margin-top: 64px;
        scroll-snap-stop: normal;
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="bg-background pt-16">
      <div class="snap-start">
        <PhotoCarousel
          images={WIDESCREEN_HOMEPAGE_CAROUSEL_PHOTOS}
          mobileImages={NARROW_SCREEN_HOMEPAGE_CAROUSEL_PHOTOS}
          alt="Hero image"
        />
      </div>

      <section class="w-full bg-background py-12 px-4 text-center snap-start">
        <h2 class="text-2xl text-text md:text-3xl mb-4">
          WELCOME
        </h2>
        <p class="text-base md:text-lg text-gray-dark italic max-w-2xl mx-auto">
          This site is both a photography journal and a place to share stories from my travels. 
          It's also my way of keeping myself accountable as I learn and improve.
        </p>
      </section>

      <!-- Add your collage and other sections below -->
      <PhotoCollage
        photosEager={HOMEPAGE_COLLAGE_HERO_PHOTOS}
        photosLazy={ADDITIONAL_HOMEPAGE_COLLAGE_PHOTOS}
      />
    </main>
    <Footer />
  </body>
</html>
