---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import DestinationSection from "../../components/DestinationSection.astro";
import { SITE_TITLE, SITE_TAGLINE, SITE_DESCRIPTION } from "../../data/site";
import {
  DESTINATIONS_AMAZON_HERO_PHOTOS,
  DESTINATIONS_ICELAND_HERO_PHOTOS,
  DESTINATIONS_MESOAMERICA_HERO_PHOTOS,
  DESTINATIONS_SOUTH_AMERICA_HERO_PHOTOS,
} from "../../data/destinations";
---

<!doctype html>
<html lang="en" class="snap-y snap-proximity scroll-smooth">
  <head
    ><BaseHead
      title={`${SITE_TITLE} | ${SITE_TAGLINE}`}
      description={SITE_DESCRIPTION}
    />
  </head>
  <body class="bg-background pt-16">
    <Header />
    <main>
      <DestinationSection
        title="THE AMAZON RIVER"
        images={DESTINATIONS_AMAZON_HERO_PHOTOS}
        galleryUrl="/galleries/amazon"
        description={["Three nights on a ferry up the Amazon River from Leticia, Colombia to Iquitos, Peru."]}
        class="snap-start"
      />
      <DestinationSection
        title="COLOMBIA & PERU"
        images={DESTINATIONS_SOUTH_AMERICA_HERO_PHOTOS}
        galleryUrl="/galleries/south-america"
        description={["Highlights from three months in Colombia and Peru."]}
        class="snap-start"
      />
      <DestinationSection
        title="ICELAND"
        images={DESTINATIONS_ICELAND_HERO_PHOTOS}
        galleryUrl="/galleries/iceland"
        description={["Shots from a road trip around the Ring Road of Iceland."]}
        class="snap-start"
      />
      <DestinationSection
        title="MESOAMERICA"
        images={DESTINATIONS_MESOAMERICA_HERO_PHOTOS}
        galleryUrl="/galleries/mesoamerica"
        description={["A collection from my travels through Mexico, Guatemala, and El Salvador."]}
        class="snap-start"
      />
      <!-- Placeholder to allow snap onto footer -->
      <div class="snap-start h-1 invisible"></div>
    </main>
    <Footer class="snap-end" />
  </body>
</html>
